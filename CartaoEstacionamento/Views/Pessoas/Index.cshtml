@model IEnumerable<CartaoEstacionamento.ViewModels.PessoaViewModel>

@{ ViewData["Title"] = "Index"; }

<h2>Cartões</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Pessoas" asp-action="Index" method="get">
    <p>

        <select >
            <option value="">All</option>
        </select>

        Title: <input type="text" />
        <input type="submit" value="Filter" />
    </p>
</form>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PessoaViewId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPessoa)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PessoaViewId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CPF)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CNPJ)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Endereco)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DataNascimento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TipoPessoa)
    </td>
    <td>
        <a asp-action="Editar" asp-route-id="@item.PessoaViewId">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.PessoaViewId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
